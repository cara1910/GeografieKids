<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GeografieKids</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", required: false)
    <style>
        body {
            font-family: 'Fredoka', sans-serif;
            background: linear-gradient(135deg, #c2e9fb, #d9f3e4);
            min-height: 100vh;
        }

        nav.navbar {
            background-color: #74AFAD;
        }

        nav .navbar-brand {
            font-weight: 600;
            color: white;
        }

        nav .nav-link {
            color: white !important;
        }

        footer {
            background-color: rgba(116, 175, 173, 0.3);
            padding: 10px 0;
            text-align: center;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md px-4 shadow-sm">
        <a class="navbar-brand" href="@Url.Action("Index", "SelectareTest")">GeografieKids</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <span class="nav-link">@Session["User"]</span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="d-flex flex-column">
        <main class="flex-fill container py-4">
            @RenderBody()
        </main>

        <footer class="text-muted">
            <div class="container">
                <span>&copy; 2025 - GeografieKids</span>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
